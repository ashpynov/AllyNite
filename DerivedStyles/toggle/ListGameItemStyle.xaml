<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Style x:Key="ListGameItemStyle" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="FocusedOn">
                            <DoubleAnimation
                                Storyboard.TargetName="ScaleTransform"
                                Storyboard.TargetProperty="ScaleX"
                                From="1"
                                To="1.125"
                                Duration="0:0:0.1" />
                            <DoubleAnimation
                                Storyboard.TargetName="ScaleTransform"
                                Storyboard.TargetProperty="ScaleY"
                                From="1"
                                To="1.125"
                                Duration="0:0:0.1" />
                        </Storyboard>
                        <Storyboard x:Key="FocusedOff">
                            <DoubleAnimation
                                Storyboard.TargetName="ScaleTransform"
                                Storyboard.TargetProperty="ScaleX"
                                From="1.125"
                                To="1"
                                Duration="0:0:0.2" />
                            <DoubleAnimation
                                Storyboard.TargetName="ScaleTransform"
                                Storyboard.TargetProperty="ScaleY"
                                From="1.125"
                                To="1"
                                Duration="0:0:0.2" />
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Grid
                        Margin="{Settings FullscreenItemSpacingMargin}"
                        d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameIntance}"
                        RenderTransformOrigin="0.5,0.5">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Settings Fullscreen.HorizontalLayout}" Value="False">
                                        <Setter Property="Margin" Value="4,0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1" />
                        </Grid.RenderTransform>
                        <ContentPresenter x:Name="ContentPresenter" Grid.Row="0" />
                        <Border
                            Grid.Row="0"
                            BorderBrush="{DynamicResource DefaultBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="16" />
                        <Border
                            x:Name="MainBorder"
                            Grid.Row="0"
                            Margin="-6"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="4"
                            CornerRadius="20"
                            Visibility="Collapsed" />
                        <Grid Grid.Row="1" Height="84">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Margin" Value="-64,18,-64,-128" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Settings Fullscreen.HorizontalLayout}" Value="False">
                                            <Setter Property="Margin" Value="-64,-16,-64,-128" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <TextBlock
                                x:Name="GameTitle"
                                MinWidth="{Binding ActualWidth, ElementName=ContentPresenter}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                FontSize="32"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource PrimaryBrush}"
                                LineHeight="28"
                                LineStackingStrategy="BlockLineHeight"
                                Text="{Binding DisplayName}"
                                TextAlignment="Left"
                                TextWrapping="Wrap"
                                Visibility="Hidden">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Settings Fullscreen.HorizontalLayout}" Value="False">
                                                <Setter Property="Background" Value="{StaticResource MainBackgourndBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <TextBlock.Effect>
                                    <DropShadowEffect
                                        BlurRadius="16"
                                        Opacity="0.9"
                                        RenderingBias="Quality"
                                        ShadowDepth="0"
                                        Color="Black" />
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>
                        <Button
                            x:Name="Clicker"
                            Grid.Row="0"
                            Command="{Binding DataContext.ToggleGameDetailsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            Opacity="0"
                            Visibility="Hidden" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsFocused}" Value="True" />
                                <Condition Binding="{Settings Fullscreen.HorizontalLayout}" Value="True" />
                                <Condition Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[ZoomCovers]}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource FocusedOff}" />
                            </MultiDataTrigger.ExitActions>
                            <MultiDataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource FocusedOn}" />
                            </MultiDataTrigger.EnterActions>
                        </MultiDataTrigger>
                        <Trigger Property="IsFocused" Value="False">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames
                                            BeginTime="0:0:0.25"
                                            Storyboard.TargetName="Clicker"
                                            Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Hidden}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Clicker" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="MainBorder" Property="Visibility" Value="Visible" />
                            <Setter Property="Canvas.ZIndex" Value="90" />
                        </Trigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsFocused}" Value="True" />
                                <Condition Binding="{Settings Fullscreen.ShowGameTitles}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="GameTitle" Property="Visibility" Value="Visible" />
                        </MultiDataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
