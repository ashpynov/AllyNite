    <TextBlock x:Key="SettingsMenuIconLayout" Text="&#xf246;" FontFamily="{DynamicResource FontAltIcoFont}" />
    <TextBlock x:Key="SettingsMenuIconMenus" Text="&#xe8fd;" FontFamily="{DynamicResource FontAltIcoFont}" />
    <TextBlock x:Key="SettingsMenuIconInput" Text="&#xe7fc;" FontFamily="{DynamicResource FontAltIcoFont}" />
    <TextBlock x:Key="SettingsMenuIconThemeOptions" Text="&#xe91b;" FontFamily="{DynamicResource FontAltIcoFont}" />

    <TextBlock x:Key="GameMenuIconPlay" Text="&#xe768;" FontFamily="{DynamicResource FontAltIcoFont}" />
    <TextBlock x:Key="GameMenuIconBackToGame" Text="&#xe7fc;" FontFamily="{DynamicResource FontAltIcoFont}" />
    <TextBlock x:Key="GameMenuIconInstall" Text="&#xe118;" FontFamily="{DynamicResource FontAltIcoFont}" />
    <TextBlock x:Key="GameMenuIconFavories" Text="&#xe734;" FontFamily="{DynamicResource FontAltIcoFont}" />
