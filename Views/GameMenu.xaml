                Width="50" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,10,10" />
            <TextBlock Text="{Binding}" Padding="0,0,0,4" VerticalAlignment="Center" />
        </StackPanel>
    </DataTemplate>

