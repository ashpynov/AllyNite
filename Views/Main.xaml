                                                TextAlignment="Left" FontSize="26"
                                                Margin="10,2,10,0" />
                                            <TextBlock
                                                Text="{Binding SelectedGame.Genres, Converter={StaticResource ListToStringConverter}, ConverterParameter=' / '}"
