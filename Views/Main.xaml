                                                FontSize="26"
                                                Style="{StaticResource TextVerticalStyle}" />
                                            <TextBlock Text=":"
                                                Style="{StaticResource TextVerticalStyle}"
                                                TextAlignment="Left" FontSize="26"
                                                Margin="10,2,10,0" />
