                                                FontSize="26"
                                                Style="{StaticResource TextVerticalStyle}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap" MaxHeight="100" MaxWidth="350" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
