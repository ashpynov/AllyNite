                                BeginTime="0:0:0.6" Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.EnterActions>
                <DataTrigger.ExitActions>
                    <StopStoryboard BeginStoryboardName="StartCoverFlash" />
                </DataTrigger.ExitActions>
            </DataTrigger>
        </Style.Triggers>
