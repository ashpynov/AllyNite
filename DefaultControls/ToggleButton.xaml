            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="{TemplateBinding Background}">
                        <Border CornerRadius="0" Opacity="0.9"
                            Background="{DynamicResource PlayButtonBackgroundBrush}"
